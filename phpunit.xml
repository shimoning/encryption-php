<?xml version="1.0" encoding="UTF-8"?>
<phpunit
  bootstrap="vendor/autoload.php"
  colors="true"
  stopOnFailure="false"
  displayDetailsOnPhpunitDeprecations="true">

  <testsuites>
    <testsuite name="All">
      <directory suffix="Test.php">tests/</directory>
    </testsuite>
  </testsuites>

  <source>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </source>
</phpunit>
